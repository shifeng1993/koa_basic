{
  "name": "koa_basic",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && pm2 start dist/main.js --name koa_basic",
    "stop": "rm -rf dist && pm2 stop koa_basic && pm2 delete koa_basic",
    "build": "rm -rf dist &&  tsc main.ts -m commonjs --outDir dist --target es2020 --lib es2020 --pretty --noImplicitAny --esModuleInterop --resolveJsonModule",
    "dev:tsnode": "ts-node main.ts",
    "watch:node": "nodemon --watch ./src --watch main.ts --exec npm run dev:tsnode -L",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:node\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^12.6.9",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-multer": "^1.0.0",
    "@types/koa-router": "^7.0.42",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-swagger-decorator": "^1.5.16"
  }
}
