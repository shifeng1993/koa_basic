{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "inlineSourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "pretty": true,
    "paths": {
      "*": [
        "node_modules/*",
        "lib/types/*"
      ]
    }
  }
}
