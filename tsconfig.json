{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": false,
        "inlineSourceMap": true,
        "baseUrl": ".",
        "lib": [
            "es2017"
        ],
        "pretty": true,
        "paths": {
            "*": [
                "node_modules/*",
                "lib/types/*"
            ]
        }
    }
}